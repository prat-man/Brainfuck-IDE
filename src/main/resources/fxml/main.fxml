<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="background" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="in.pratanumandal.brainfuck.Controller">
   <children>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
            <Button mnemonicParsing="false" onAction="#addNewFile" text="New">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/add.png" />
                     </image></ImageView>
               </graphic></Button>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#openFile" text="Open">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/open.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <SplitMenuButton mnemonicParsing="false" onAction="#saveFile" text="Save">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#saveAsFile" text="Save As">
                     <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/save-as.png" />
                           </image></ImageView>
                     </graphic>
                  </MenuItem>
              </items>
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/save.png" />
                     </image>
                  </ImageView>
               </graphic>
            </SplitMenuButton>
            <Separator layoutX="118.0" layoutY="10.0">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Separator>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#interpret" text="Run">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/run.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Separator>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Separator>
          <Button mnemonicParsing="false" onAction="#build" text="Build">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/build.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#buildAndRun" text="Build &amp; Run">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/build-and-run.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Pane HBox.hgrow="ALWAYS" />
            <ToggleButton fx:id="searchButton" mnemonicParsing="false" prefHeight="25.0">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/search.png" />
                        </image></ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Find and Replace" />
                </tooltip>
            </ToggleButton>
            <Separator layoutX="721.0" layoutY="10.0">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Separator>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/font-size.png" />
                     </image>
                  </ImageView>
                  <ChoiceBox fx:id="fontSizeChooser" value="16px">
                      <items>
                          <FXCollections fx:factory="observableArrayList">
                              <String fx:value="12px" />
                              <String fx:value="14px" />
                              <String fx:value="16px" />
                              <String fx:value="18px" />
                              <String fx:value="20px" />
                              <String fx:value="22px" />
                              <String fx:value="24px" />
                          </FXCollections>
                      </items>
                  </ChoiceBox>
               </children>
            </HBox>
            <Separator layoutX="177.0" layoutY="10.0">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Separator>
            <Button layoutX="192.0" layoutY="10.0" mnemonicParsing="false" onAction="#about" text="About">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/about.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
        </items>
         <padding>
            <Insets bottom="9.0" left="7.0" right="7.0" top="8.0" />
         </padding>
      </ToolBar>
      <TabPane fx:id="tabPane" prefHeight="300.0" prefWidth="700.0" tabClosingPolicy="ALL_TABS" VBox.vgrow="ALWAYS" />
      <HBox fx:id="findAndReplace" spacing="7.0" styleClass="find-and-replace" visible="false">
         <children>
            <TextField fx:id="findField" promptText="Find text" HBox.hgrow="ALWAYS" />
            <TextField fx:id="replaceField" promptText="Replace text" HBox.hgrow="ALWAYS" />
            <ToggleButton contentDisplay="RIGHT" mnemonicParsing="false">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/regex.png" />
                        </image>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Regex" />
                </tooltip>
            </ToggleButton>
            <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#findNext">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/next.png" />
                        </image>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Find Next" />
                </tooltip>
            </Button>
            <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#findPrevious">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/previous.png" />
                        </image>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Find Previous" />
                </tooltip>
            </Button>
            <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#replace">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/replace.png" />
                        </image>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Replace" />
                </tooltip>
            </Button>
            <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#replaceAll">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/replace-all.png" />
                        </image>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip showDelay="100ms" text="Replace All" />
                </tooltip>
            </Button>
            <Button mnemonicParsing="false" onAction="#toggleSearch" styleClass="secondary">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/close.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
         <padding>
            <Insets bottom="7.0" left="7.0" right="7.0" top="8.0" />
         </padding>
      </HBox>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox alignment="CENTER_LEFT" layoutX="331.0" layoutY="17.0" styleClass="status-bar">
               <children>
                  <Label fx:id="caretPosition" text="Position" />
                  <Separator orientation="VERTICAL">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Separator>
                  <Label fx:id="caretRow" layoutX="17.0" layoutY="17.0" text="Line" />
                  <Separator layoutX="91.0" layoutY="17.0" orientation="VERTICAL">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Separator>
                  <Label fx:id="caretColumn" layoutX="91.0" layoutY="17.0" text="Column" />
               </children>
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_RIGHT" styleClass="status-bar" GridPane.columnIndex="1">
               <children>
                  <Label fx:id="charCount" text="Characters" />
                  <Separator orientation="VERTICAL">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Separator>
                  <Label fx:id="lineCount" layoutX="691.0" layoutY="17.0" text="Lines" />
               </children>
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
            </HBox>
         </children>
      </GridPane>
   </children>
</VBox>
